{
  "name": "Neutrominator",
  "description": "Konvertiert Formen mit *innen und _innen u.ä. ins gewöhnliche Neutrum",
  "version": "0.0.6",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["neutrominator.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Neutralisieren",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "manifest_version": 2
}
