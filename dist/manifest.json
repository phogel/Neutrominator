{
  "name": "Neutrumator",
  "description": "Gendergespinste ins Neutrum zur√ºcksetzen",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["neutrominator.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Neutralisieren",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
